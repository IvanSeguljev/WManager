@using WManager.Models
@model LoginViewModel
@{
    Layout = "";
}
@Styles.Render("~/Content/css")

<link rel="stylesheet" type="text/css" href="/Content/Login/util.css">
<link rel="stylesheet" type="text/css" href="/Content/Login/main.css">


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <span class="login100-form-title p-b-32" style="padding-left:40px;">
                    <img src="~/Content/Images/Logo.png" />
                </span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <span class="txt1 p-b-11">
                    Korisničko ime
                </span>
                <div class="wrap-input100 validate-input m-b-36">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input100" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <span class="txt1 p-b-11">
                    Šifra
                </span>
                <div class="wrap-input100 validate-input m-b-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "input100" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>


                <button class="btnTrazi"style="margin-left:160px;">
                    Login
                </button>



            }
        </div>

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
