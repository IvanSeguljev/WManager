    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Barkod )
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Naziv)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Kolicina)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ZemljaPorekla)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Proizvodjac)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Barkod }) |
        @Html.ActionLink("Details", "Details", new { id = item.Barkod }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Barkod })
    </td>
</tr>
}

</table>
