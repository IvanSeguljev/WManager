@model IEnumerable<WManager.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form class="tableForm">
        <h2>Lista radnika</h2>

        <hr />

        <table class="table table-striped table-hover table-condensed" id="workerTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        Broj telefona
                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>


                    </tr>
                }
            </tbody>
        </table>
        <br /><br />
              <p class="unesiNovibtn" style="width: 200px !important;">
                  @Html.ActionLink("Unesi novog radnika", "Register", "Account")
                  
              </p>

    </form>
    @section Scripts{

        <script src="~/Scripts/datatables/datatables.min.js"></script>
        <link href="~/Scripts/datatables/datatables.min.css" rel="stylesheet" />
        <script>
            $(document).ready(function () {
                $('#workerTable').DataTable();
            });
        </script>
    }
